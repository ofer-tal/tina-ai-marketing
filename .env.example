# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/blush-marketing

# App Store Connect API
APP_STORE_CONNECT_KEY_ID=
APP_STORE_CONNECT_ISSUER_ID=
APP_STORE_CONNECT_PRIVATE_KEY_PATH=
APP_STORE_CONNECT_VENDOR_NUMBER=

# Apple Search Ads API - JWT Authentication
# Documentation: https://developer.apple.com/documentation/apple_ads/implementing-oauth-for-the-apple-search-ads-api
# These credentials are obtained from Apple Search Ads API setup in your Apple Developer account
SEARCH_ADS_CLIENT_ID=SEARCHADS.xxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SEARCH_ADS_TEAM_ID=SEARCHADS.xxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SEARCH_ADS_KEY_ID=dd052156-b161-4c58-b223-0d494373de99
SEARCH_ADS_PRIVATE_KEY_PATH=backend/config/credentials/SearchAds-private-key.pem
SEARCH_ADS_ORGANIZATION_ID=1234567890
SEARCH_ADS_ENVIRONMENT=sandbox

# TikTok API
TIKTOK_APP_KEY=
TIKTOK_APP_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:3001/auth/tiktok/callback

# Instagram Graph API
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:3001/auth/instagram/callback

# ===================================================================
# Google OAuth (unified for all Google services)
# ===================================================================
# Used for: Google Sheets, YouTube Data API, and any future Google services
# Documentation: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# YouTube Data API v3
YOUTUBE_API_KEY=

# Legacy YouTube OAuth variables (deprecated - use GOOGLE_* instead)
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=
# YOUTUBE_REDIRECT_URI=

# Google Analytics 4 API
# Documentation: https://developers.google.com/analytics/devguides/reporting/data/v1
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download the JSON key file and place it at: backend/config/credentials/google-analytics-service-account.json
# Add the service account email to your GA4 property with "View" permissions
GOOGLE_ANALYTICS_VIEW_ID=
GOOGLE_ANALYTICS_PROPERTY_ID=
GOOGLE_ANALYTICS_CREDENTIALS=backend/config/credentials/google-analytics-service-account.json

# Firebase Analytics / Firebase Admin SDK
# Documentation: https://firebase.google.com/docs/admin/setup
# Create a service account at: https://console.firebase.google.com/project/_/settings/serviceaccounts/adminsdk
# Download the JSON key file and place it at: backend/config/credentials/firebase-adminsdk.json
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS=backend/config/credentials/firebase-adminsdk.json

# Fal.ai API (Video Generation)
FAL_AI_API_KEY=

# RunPod API (Serverless Endpoints)
# RunPod SDK uses endpoint IDs to construct full URLs
# Get endpoint IDs from: https://www.runpod.io/console/serverless
RUNPOD_API_KEY=
RUNPOD_ENDPOINT_ID_PIXELWAVE=
RUNPOD_ENDPOINT_ID_XTTSV2=
# Legacy (deprecated): Use endpoint IDs above instead
# RUNPOD_API_ENDPOINT=

# GLM4.7 AI API (Strategy & Chat)
# Get API key from: https://z.ai/manage-apikey/apikey-list
GLM47_API_KEY=
GLM47_API_ENDPOINT=https://api.z.ai/api/paas/v4

# Server Configuration
PORT=3001
NODE_ENV=development

# Timezone for scheduling and content operations
# Common timezones: America/Los_Angeles, America/New_York, America/Chicago, Europe/London, UTC
TIMEZONE=America/Los_Angeles

# Budget Settings (in USD)
MONTHLY_BUDGET_LIMIT=1000
BUDGET_WARNING_THRESHOLD=0.70
BUDGET_CRITICAL_THRESHOLD=0.90

# Content Generation Settings
CONTENT_GENERATION_SCHEDULE=0 6 * * *
POSTING_SCHEDULE=0 */4 * * *
MAX_CONTENT_BATCH_SIZE=5

# Batch Generation Scheduler
BATCH_GENERATION_TIME=06:00
BATCH_GENERATION_TIMEZONE=America/Los_Angeles
BATCH_SIZE=5
DAYS_AHEAD=2

# Metrics Aggregation Scheduler
METRICS_AGGREGATION_TIME=01:00
METRICS_AGGREGATION_TIMEZONE=UTC

# Weekly ASO Analysis Scheduler
ASO_ANALYSIS_DAY=monday
ASO_ANALYSIS_TIME=09:00
ASO_ANALYSIS_TIMEZONE=UTC

# Budget Threshold Checker
BUDGET_CHECK_INTERVAL=0 * * * *
BUDGET_CHECK_TIMEZONE=UTC
ENABLE_AUTO_PAUSE=true

# Daily Briefing Generator
DAILY_BRIEFING_TIME=08:00
DAILY_BRIEFING_TIMEZONE=UTC

# Campaign Review Scheduler
CAMPAIGN_REVIEW_DAY=friday
CAMPAIGN_REVIEW_TIME=15:00
CAMPAIGN_REVIEW_TIMEZONE=UTC

# Data Cleanup Job
DATA_CLEANUP_DAY=sunday
DATA_CLEANUP_TIME=02:00
DATA_CLEANUP_TIMEZONE=UTC
TEMP_FILE_AGE_DAYS=7

# API Health Monitor
API_HEALTH_CHECK_INTERVAL=*/30 * * * *
API_HEALTH_CHECK_TIMEZONE=UTC
API_HEALTH_FAILURE_THRESHOLD=3

# Post Retry Settings
MAX_POST_RETRIES=5
POST_RETRY_INTERVAL_MINUTES=60

# Revenue Sync Settings
REVENUE_SYNC_SCHEDULE=0 2 * * *
REVENUE_SYNC_TIMEZONE=UTC
REVENUE_SYNC_DAYS=7

# Back-fill Settings
# Number of days to back-fill when running back-fill scripts (default: 180 days / 6 months)
REVENUE_BACKFILL_DAYS=180
ASA_BACKFILL_DAYS=180

# Google Analytics Sync Job Settings
GA_SYNC_SCHEDULE=0 * * * *
GA_SYNC_TIMEZONE=UTC

# Firebase Analytics Sync Job Settings
FIREBASE_SYNC_SCHEDULE=0 6 * * *
FIREBASE_SYNC_TIMEZONE=UTC

# Content Metrics Sync Job Settings
CONTENT_METRICS_SYNC_SCHEDULE=0 */2 * * *
CONTENT_METRICS_SYNC_TIMEZONE=UTC

# App Store Analytics Job Settings
APP_STORE_ANALYTICS_SCHEDULE=0 7 * * 0
APP_STORE_ANALYTICS_TIMEZONE=UTC

# Keyword Ranking Check Settings
KEYWORD_RANKING_CHECK_SCHEDULE=0 3 * * *
KEYWORD_RANKING_CHECK_TIMEZONE=UTC
KEYWORD_RANKING_SIGNIFICANT_CHANGE=10

# A/B Test Duration Monitor Settings
AB_TEST_CHECK_SCHEDULE=0 4 * * *
AB_TEST_TIMEZONE=UTC
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_SIGNIFICANCE_THRESHOLD=0.05

# Storage Settings
STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=100

# FFmpeg Configuration
# Controls how FFmpeg is invoked:
# - 'wsl' (default): Use WSL's FFmpeg via 'wsl ffmpeg' (Windows with WSL)
# - 'native': Use FFmpeg installed natively on the system (Linux, Windows without WSL, macOS)
# On Linux, FFmpeg will be detected automatically. On Windows/macOS, you may need to set this.
FFMPEG_MODE=wsl

# Feature Flags
ENABLE_TIKTOK_POSTING=true
ENABLE_INSTAGRAM_POSTING=false
ENABLE_YOUTUBE_POSTING=false
ENABLE_TIKTOK_AUDIO=true
ENABLE_AUDIO_OVERLAY=true

# Audio Settings
TIKTOK_AUDIO_LIBRARY_PATH=./audio-library/tiktok
AUDIO_OVERLAY_OUTPUT_DIR=./output/audio-overlay

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_ROTATION_SCHEDULE=0 3 * * 0
LOG_RETENTION_DAYS=30
LOG_COMPRESSION_ENABLED=true
LOG_MAX_DISK_USAGE_PERCENT=10
LOG_MAX_DISK_USAGE_BYTES=1073741824
